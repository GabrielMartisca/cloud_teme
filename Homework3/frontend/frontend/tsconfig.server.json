{
    "compilerOptions": {
      "outDir": "./dist/server",
      "target": "ES2020",                
      "module": "ES2020",                 
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "noEmitOnError": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/main.server.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  